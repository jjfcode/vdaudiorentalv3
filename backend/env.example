# ========================================
# VD Audio Rental - Development Environment
# ========================================
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration (Development - includes localhost origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5502,http://localhost:5502

# Rate Limiting (More permissive for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=contact@vdaudiorentals.com

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
BCRYPT_SALT_ROUNDS=12

# Database (if you add one later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=vdaudiorental_dev
# DB_USER=db_user
# DB_PASSWORD=db_password

# External Services (if you add them later)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Logging (More verbose for development)
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/development.log

# Performance
BODY_PARSER_LIMIT=10mb
REQUEST_TIMEOUT=30000

# Development specific
ENABLE_DEBUG_LOGGING=true
SHOW_STACK_TRACES=true
